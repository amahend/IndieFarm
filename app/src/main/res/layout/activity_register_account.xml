<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register_Account">

    <!--Blue Background on top-->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/blue_bg" />

    <!--White Flower looking Logo-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="109dp"
        android:layout_height="117dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backgroundImage"
        app:layout_constraintTop_toTopOf="@+id/backgroundImage"
        app:layout_constraintVertical_bias="0.235"
        app:srcCompat="@drawable/logoonly" />

    <!--"Account Register" Title-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Registration"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.074" />

    <!--Blue Border for Full Name input-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311">

        <!--Blue User icon-->
        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/user_blue"
            tools:layout_editor_absoluteX="71dp"
            tools:layout_editor_absoluteY="289dp" />

        <!--For Full Name input-->
        <EditText
            android:id="@+id/etName"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/user_logo"
            android:layout_toRightOf="@+id/user_logo"
            android:background="@android:color/transparent"
            android:hint="Full Name"
            android:inputType="text"
            android:maxLines="1"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="289dp" />
    </RelativeLayout>

    <!--Blue Border for Email input-->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.02">

        <!--Email icon-->
        <ImageView
            android:id="@+id/email_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/email_blue"
            tools:layout_editor_absoluteX="59dp"
            tools:layout_editor_absoluteY="379dp" />

        <!--For Email input-->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/email_logo"
            android:layout_toRightOf="@+id/email_logo"
            android:background="@android:color/transparent"
            android:hint="Email"
            android:inputType="text"
            android:maxLines="1" />
    </RelativeLayout>

    <!--Border for Password Input-->
    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.021">

        <!--Blue Password Icon-->
        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/password_blue" />

        <!--For Password Input-->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/password_icon"
            android:layout_toRightOf="@+id/password_icon"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:inputType="text" />
    </RelativeLayout>

    <!--Blue border for Password Confirmation-->
    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintVertical_bias="0.028">

        <!--Blue icon for Password confirmation-->
        <ImageView
            android:id="@+id/confpassword_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/password_blue" />

        <!--For Password Confirmation-->
        <EditText
            android:id="@+id/etConfPassword"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="11dp"
            android:layout_toEndOf="@+id/confpassword_icon"
            android:layout_toRightOf="@+id/confpassword_icon"
            android:background="@android:color/transparent"
            android:hint="Confirm Password"
            android:inputType="text" />
    </RelativeLayout>

    <!--Blue border for Age-->
    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4"
        app:layout_constraintVertical_bias="0.028" >

        <!--Blue Icon for Age-->
        <ImageView
            android:id="@+id/age_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/age_logo" />

        <!--For Age input-->
        <EditText
            android:id="@+id/etAge"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="11dp"
            android:background="@android:color/transparent"
            android:hint="Age"
            android:layout_toEndOf="@+id/age_icon"
            android:layout_toRightOf="@+id/age_icon"
            android:inputType="text"/>
    </RelativeLayout>

    <!--Blue border for Role-->
    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5"
        app:layout_constraintVertical_bias="0.055">

        <!--For choosing role-->
        <Spinner
            android:id="@+id/spRole"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="590dp" />
    </RelativeLayout>

    <!--Text title "Role:"-->
    <TextView
        android:id="@+id/tvRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role:"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout6"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout5"
        app:layout_constraintVertical_bias="0.113" />

    <!--Blue Border for Gender-->
    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout6"
        app:layout_constraintVertical_bias="0.049">

        <!--For choosing Gender-->
        <Spinner
            android:id="@+id/spGender"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="590dp" />
    </RelativeLayout>

    <!--Text title "Gender:"-->
    <TextView
        android:id="@+id/tvGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout7"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRole"
        app:layout_constraintVertical_bias="0.153" />

    <!--Blue border for Village-->
    <RelativeLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="200dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_border_rounded_cornwe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.689"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7"
        app:layout_constraintVertical_bias="0.055">

        <!--For choosing Village-->
        <Spinner
            android:id="@+id/spVillage"
            android:layout_width="223dp"
            android:layout_height="42dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="590dp" />
    </RelativeLayout>

    <!--Text tile "Village:"-->
    <TextView
        android:id="@+id/tvVillage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Village:"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout8"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGender"
        app:layout_constraintVertical_bias="0.223" />

    <!--Button to Register account-->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:text="Register"
        android:textColor="#FFFFFF"
        app:backgroundTint="#1870d5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout8"
        app:layout_constraintVertical_bias="0.169" />

</androidx.constraintlayout.widget.ConstraintLayout>