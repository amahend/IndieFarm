<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E600"
    tools:context=".MainActivity">

    <!--White Logo-->

    <!--"IndieFarm" Title-->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="129dp"
        android:layout_height="154dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317"
        app:srcCompat="@drawable/logoonly" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="388dp"
        android:layout_height="221dp"
        android:layout_marginBottom="240dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/applogonobck" />

    <!--Button for Farmer Login-->
    <Button
        android:id="@+id/btnFarmerLogin"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/orange_fill__rounded_color"
        android:text="Farmer Login"
        android:textColor="#3DDC64"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.057" />

    <!--Button for Village Head Login-->
    <Button
        android:id="@+id/btnVHLogin"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/green_fill__rounded_color"
        android:text="Village Head Login"
        android:textColor="#FFB437"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFarmerLogin"
        app:layout_constraintVertical_bias="0.086" />

    <!--Button for Registering Account-->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="274dp"
        android:layout_height="49dp"
        android:background="@drawable/green_fill__rounded_color"
        android:text="Register Account"
        android:textColor="#1870D5"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVHLogin"
        app:layout_constraintVertical_bias="0.129" />

</androidx.constraintlayout.widget.ConstraintLayout>